
@model IEnumerable<Song>

@{
    ViewData["Title"] = "View";
}

<h2>@ViewData["Title"]</h2>

<section class="row card-group">


        @foreach (var s in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">

                <div class="card mb-4 text-center h-100">

                    <div class="card-body">

                        <a asp-controller="Songs" asp-action="Details" asp-route-category="@s.Title">@s.Title</a>

                    </div>

                </div>

            </div>
        }

</section>